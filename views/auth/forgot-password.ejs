<%- include('../partials/header', { title: title }) %>

<div class="row justify-content-center">
  <div class="col-md-6">
    <div class="card shadow">
      <div class="card-header bg-primary text-white">
        <h3 class="mb-0">نسيت كلمة المرور</h3>
      </div>
      <div class="card-body">
        <p class="card-text">أدخل بريدك الإلكتروني وسنرسل لك رابطاً لإعادة تعيين كلمة المرور.</p>
        <form action="/auth/forgot-password" method="POST">
          <div class="mb-3">
            <label for="email" class="form-label">البريد الإلكتروني</label>
            <input type="email" class="form-control" id="email" name="email" required>
          </div>
          <div class="d-grid gap-2">
            <button type="submit" class="btn btn-primary">إرسال رابط إعادة التعيين</button>
          </div>
        </form>
        <hr>
        <div class="text-center">
          <p><a href="/auth/login">العودة إلى تسجيل الدخول</a></p>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include('../partials/footer') %>
